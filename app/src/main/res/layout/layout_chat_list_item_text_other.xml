<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/group_manage_list_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="10dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/layout_chat_list_item_text_other_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        app:placeholderImage="@drawable/floating"
        app:roundAsCircle="true"
        />

    <TextView
        android:id="@+id/layout_chat_list_item_text_other_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@id/layout_chat_list_item_text_other_avatar"
        android:text="text"
        android:textSize="15sp"

        />


</RelativeLayout>
